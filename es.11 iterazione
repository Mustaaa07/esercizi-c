#include <stdio.h>

int main(int argc, char *argv[]) {
  
    int n,somma=0;
    
    do{
        printf("inserisci n: ");
        scanf("%d",&n);
        
    }while(n<1);
    
    for(int i = 0 ; i<n ; i++){
        if(i % 2 != 0){
        somma = somma + i;
        }
    }
    printf("Somma dei primi numeri: %d", somma);
    return 0;
}
